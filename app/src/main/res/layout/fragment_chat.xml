<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.fragment.ChatFragment">

    <data>
        <variable name="handler" type="com.gpetuhov.android.hive.ui.fragment.ChatFragment"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageButton
                android:id="@+id/chat_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:background="@android:color/transparent"
                android:contentDescription="@string/close_details"
                android:onClick="@{view -> handler.navigateUp()}"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/chat_user_name_text"
                app:layout_constraintTop_toTopOf="@+id/chat_user_name_text"/>

        <TextView
                android:id="@+id/chat_user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                tools:text="Username"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chat_close_button"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"/>

        <View
                android:id="@+id/user_name_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_300"
                app:layout_constraintTop_toBottomOf="@+id/chat_user_name_text"
                android:layout_marginTop="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/messages"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/user_name_separator"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/messages_separator"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

        <View
                android:id="@+id/messages_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_300"
                app:layout_constraintBottom_toTopOf="@+id/message_text"
                android:layout_marginBottom="8dp"/>

        <EditText
                android:id="@+id/message_text"
                android:hint="@string/enter_message"
                android:imeOptions="actionSend"
                android:inputType="text"
                android:layout_width="0dp"
                android:layout_height="@dimen/basic_view_size"
                style="@style/basicTextStyle"
                android:importantForAutofill="no"
                android:background="@android:color/transparent"
                tools:text="Message text"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/message_send_button"
                android:layout_marginRight="8dp"/>

        <Button
                android:id="@+id/message_send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@+id/message_text"
                app:layout_constraintBottom_toBottomOf="@+id/message_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>