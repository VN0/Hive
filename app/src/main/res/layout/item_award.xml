<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.fragment.ProfileFragment">

    <data>
        <variable name="awardName" type="String"/>
    </data>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center">

        <ImageButton
                android:id="@+id/award_item_image"
                android:layout_width="@dimen/basic_view_size"
                android:layout_height="@dimen/basic_view_size"
                android:background="@android:color/transparent"/>

        <TextView
                android:id="@+id/award_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:text="@{awardName}"
                style="@style/titleTextStyleUnbold"
                tools:text="AwardTitle"/>

    </LinearLayout>

</layout>