<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph_main"
            app:startDestination="@id/navigation_search">

    <!--Ids of the fragments must be the same as ids of bottom navigation menu items-->

    <fragment
            android:id="@+id/navigation_search"
            android:name="com.gpetuhov.android.hive.ui.fragment.MapFragment"
            android:label="fragment_map"
            tools:layout="@layout/fragment_map" >
        <action
                android:id="@+id/action_navigation_search_to_details_fragment"
                app:destination="@id/details_fragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"/>
    </fragment>

    <fragment
            android:id="@+id/navigation_messages"
            android:name="com.gpetuhov.android.hive.ui.fragment.MessagesFragment"
            android:label="fragment_messages"
            tools:layout="@layout/fragment_messages" />

    <fragment
            android:id="@+id/navigation_profile"
            android:name="com.gpetuhov.android.hive.ui.fragment.ProfileFragment"
            android:label="fragment_profile"
            tools:layout="@layout/fragment_profile" />

    <fragment
            android:id="@+id/details_fragment"
            android:name="com.gpetuhov.android.hive.ui.fragment.DetailsFragment"
            android:label="DetailsFragment"
            tools:layout="@layout/fragment_details">
        <argument
                android:name="uid"
                app:argType="string"/>
    </fragment>

</navigation>