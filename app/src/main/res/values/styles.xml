<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_red_600</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash screen theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- FirebaseUI for Auth theme -->
    <!-- Here does nothing. Changes are present only in styles v23 -->
    <style name="AuthTheme" parent="FirebaseUI">
    </style>

    <!-- Basic text style -->
    <style name="basicTextStyle">
        <item name="android:textColor">@color/md_grey_600</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
    </style>

    <!-- Medium text style -->
    <style name="mediumTextStyle">
        <item name="android:textColor">@color/md_grey_600</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <!-- Small text style -->
    <style name="smallTextStyle">
        <item name="android:textColor">@color/md_grey_600</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <!-- Title text style -->
    <style name="titleTextStyle">
        <item name="android:textColor">@color/md_grey_600</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Map marker text style for online users -->
    <style name="greenTextStyle">
        <item name="android:textColor">@color/md_green_600</item>
    </style>

    <!-- Toolbar title style -->
    <!-- This is needed to prevent small toolbar title text size in landscape -->
    <style name="toolbarTitleStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/basic_text_size</item>
    </style>

</resources>
