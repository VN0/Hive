<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_red_600</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash screen theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- FirebaseUI for Auth theme -->
    <!-- Here does nothing. Changes are present only in styles v23 -->
    <style name="AuthTheme" parent="FirebaseUI">
    </style>

    <!-- Map marker text style for online users -->
    <style name="greenTextStyle">
        <item name="android:textColor">@color/md_green_600</item>
    </style>

</resources>
